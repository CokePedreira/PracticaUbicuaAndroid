<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat" >
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="cardColor">#616161</item>
        <item name="backgroundColor">#303030</item>
        <item name="textColor">#EEEEEE</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="cardColor">#e0f2f1</item>
        <item name="backgroundColor">#ede7f6</item>
        <item name="textColor">#212121</item>

    </style>
</resources>
