<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.cokepedreira.ocalimochoapp.MimicaActivity">


    <ImageView
        android:id="@+id/imagenPregunta"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="start"
        android:contentDescription="Imagen de pregunta"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:id="@+id/pregunta"
        android:text=""/>
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:textSize="14sp"
        android:id="@+id/AvisoTabu"
        android:text="Las posibles respuestas son: "/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/respuesta1"
            android:textSize="14sp"
            android:onClick="respuesta1"
            android:text="RESPUESTA 1"/>
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/respuesta2"
            android:textSize="14sp"
            android:onClick="respuesta2"
            android:text="RESPUESTA 2"/>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/respuesta3"
            android:textSize="14sp"
            android:onClick="respuesta3"
            android:text="RESPUESTA 3"/>
        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/respuesta4"
            android:onClick="respuesta4"
            android:textSize="14sp"
            android:text="RESPUESTA 4"/>
    </LinearLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/continuar"
        android:onClick="volverTablero"
        android:text="VOLVER AL TABLERO"/>


</LinearLayout>